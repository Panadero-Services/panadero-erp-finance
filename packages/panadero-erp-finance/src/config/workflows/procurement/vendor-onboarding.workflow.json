{
  "metadata": {
    "workflowId": "vendor-onboarding",
    "version": "1.0.8",
    "lastUpdated": "2025-01-27",
    "author": "Procurement Team",
    "status": "active"
  },
  "workflow": {
    "id": "vendor-onboarding",
    "name": "Vendor Onboarding",
    "description": "Complete vendor registration and validation process",
    "category": "vendor_management",
    "module": "procurement",
    "version": "1.0.8",
    "complexity": "medium",
    "estimatedDuration": "4-6 weeks",
    "approvalLevels": 2,
    "tags": ["vendor", "onboarding", "procurement", "validation"],
    "slaSettings": {
      "totalDuration": "4-6 weeks",
      "escalationRules": [
        {
          "condition": "step_overdue_by_days",
          "value": 3,
          "action": "notify_manager"
        },
        {
          "condition": "workflow_overdue_by_days",
          "value": 7,
          "action": "escalate_to_director"
        }
      ]
    },
    "notificationSettings": {
      "stepCompletion": true,
      "approvalRequired": true,
      "workflowCompletion": true,
      "reminderFrequency": "daily"
    },
    "steps": [
      {
        "id": "vendor_selection",
        "name": "Vendor Selection",
        "description": "Select an existing vendor from the shared vendor registry",
        "type": "shared_entity_selection",
        "required": true,
        "order": 1,
        "estimatedDuration": "5 minutes",
        "approvalRequired": false,
        "sharedEntity": {
          "type": "vendors",
          "apiEndpoint": "/api/table/vendors",
          "displayField": "name",
          "identifierField": "id",
          "searchFields": ["name", "vendor_code"],
          "required": true
        },
        "requirements": {
          "vendor_selected": {
            "type": "required",
            "message": "A vendor must be selected to proceed"
          }
        }
      },
      {
        "id": "discovery",
        "name": "Vendor Discovery & Registration",
        "description": "Initial vendor information collection and evaluation",
        "type": "form_submission",
        "required": true,
        "order": 2,
        "estimatedDuration": "30 minutes",
        "approvalRequired": false,
        "formSchema": {
          "sections": [
            {
              "title": "Basic Information",
              "fields": [
                {
                  "name": "company_name",
                  "type": "text",
                  "required": true,
                  "label": "Company Name",
                  "validation": {
                    "minLength": 2,
                    "maxLength": 100
                  }
                },
                {
                  "name": "business_type",
                  "type": "select",
                  "required": true,
                  "label": "Business Type",
                  "options": ["Corporation", "LLC", "Partnership", "Sole Proprietorship"]
                },
                {
                  "name": "industry",
                  "type": "select",
                  "required": true,
                  "label": "Industry",
                  "options": ["Manufacturing", "Services", "Technology", "Healthcare", "Other"]
                },
                {
                  "name": "website",
                  "type": "url",
                  "required": false,
                  "label": "Website"
                }
              ]
            },
            {
              "title": "Contact Information",
              "fields": [
                {
                  "name": "primary_contact_name",
                  "type": "text",
                  "required": true,
                  "label": "Primary Contact Name"
                },
                {
                  "name": "primary_contact_email",
                  "type": "email",
                  "required": true,
                  "label": "Primary Contact Email"
                },
                {
                  "name": "primary_contact_phone",
                  "type": "tel",
                  "required": true,
                  "label": "Primary Contact Phone"
                },
                {
                  "name": "business_address",
                  "type": "textarea",
                  "required": true,
                  "label": "Business Address",
                  "attributes": {
                    "rows": 3
                  }
                }
              ]
            },
            {
              "title": "Financial Information",
              "fields": [
                {
                  "name": "tax_id",
                  "type": "text",
                  "required": true,
                  "label": "Tax ID / EIN"
                },
                {
                  "name": "bank_name",
                  "type": "text",
                  "required": true,
                  "label": "Bank Name"
                },
                {
                  "name": "account_number",
                  "type": "text",
                  "required": true,
                  "label": "Account Number"
                },
                {
                  "name": "routing_number",
                  "type": "text",
                  "required": true,
                  "label": "Routing Number"
                }
              ]
            }
          ]
        },
        "validationRules": {
          "requiredFields": ["company_name", "business_type", "primary_contact_email", "tax_id"],
          "customValidations": [
            {
              "field": "primary_contact_email",
              "rule": "email_format"
            },
            {
              "field": "tax_id",
              "rule": "tax_id_format"
            }
          ]
        }
      },
      {
        "id": "due_diligence",
        "name": "Due Diligence & Background Check",
        "description": "Verify vendor credentials, financial stability, and compliance",
        "type": "approval",
        "required": true,
        "order": 3,
        "estimatedDuration": "2-3 business days",
        "approvalRequired": true,
        "approverRoles": ["procurement_manager", "finance_manager"],
        "formSchema": {
          "sections": [
            {
              "title": "Document Upload",
              "fields": [
                {
                  "name": "business_license",
                  "type": "file",
                  "required": true,
                  "label": "Business License",
                  "attributes": {
                    "accept": ".pdf,.jpg,.png",
                    "maxSize": "10MB"
                  }
                },
                {
                  "name": "insurance_certificate",
                  "type": "file",
                  "required": true,
                  "label": "Insurance Certificate",
                  "attributes": {
                    "accept": ".pdf",
                    "maxSize": "10MB"
                  }
                },
                {
                  "name": "financial_statements",
                  "type": "file",
                  "required": true,
                  "label": "Recent Financial Statements",
                  "attributes": {
                    "accept": ".pdf",
                    "maxSize": "20MB"
                  }
                },
                {
                  "name": "references",
                  "type": "file",
                  "required": false,
                  "label": "Business References",
                  "attributes": {
                    "accept": ".pdf,.doc,.docx",
                    "maxSize": "10MB"
                  }
                }
              ]
            },
            {
              "title": "Verification Checklist",
              "fields": [
                {
                  "name": "business_license_verified",
                  "type": "checkbox",
                  "required": true,
                  "label": "Business License Verified"
                },
                {
                  "name": "insurance_active",
                  "type": "checkbox",
                  "required": true,
                  "label": "Insurance Coverage Active"
                },
                {
                  "name": "financial_stability_check",
                  "type": "select",
                  "required": true,
                  "label": "Financial Stability",
                  "options": ["Excellent", "Good", "Fair", "Poor"]
                },
                {
                  "name": "compliance_check",
                  "type": "checkbox",
                  "required": true,
                  "label": "Regulatory Compliance Verified"
                }
              ]
            }
          ]
        }
      }
    ]
  }
}



